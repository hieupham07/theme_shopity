/*--------customers account-------*/
.wrapbox-content-account{
	.userbox{
		max-width: 650px;
		padding: 70px 65px;
		h1,h2{
			font-size: 26px;
			margin: 0 0 32px;
			font-weight: 600;
		}
		.errors{
			background: #F4E4E5;
			color: red;
			padding: 12px 20px;
			white-space: normal;
			margin-bottom: 20px;
			font-size: 14px;
			font-weight: 500;
		}
		label{
			&.text-field{
				font-size: 12px;
				letter-spacing: 1px;
				color: #000;
			}
		}
		.form-control{
			background: #f3f5f6;
			border-radius: 0;
			color: #000;
			&:focus{background: #fff;}
		}
		@media(max-width: 767px){
			&{padding: 0;}
		}
	}
	.action-button{
		.btn{
			width: 100%;
			padding: 15px 20px;
			font-weight: 600;
		}
		
	}
	.register--password{
		color: #959898;
		a{
			color: {{settings.shop_title_color}};
			&:hover{
				color: {{settings.shop_text_hover_color}};
			}
		}
	}
}
#grender-group{
	input[type="radio"]{
		display: none;
		+ label{
			position: relative;
			cursor: pointer;
			padding-left: 28px;
			margin: 10px 20px 5px 0;
			&:before,&:after{
				content: "";
				position: absolute;
				border-radius: 50%;
				-moz-transition: all 0.3s ease;
				-o-transition: all 0.3s ease;
				-webkit-transition: all 0.3s ease;
				transition: all 0.3s ease;
			}
			&:before{
				top: 0;
				left: 0;
				width: 18px;
				height: 18px;
				background: #000000;
				-moz-box-shadow: inset 0 0 0 18px #efefef;
				-webkit-box-shadow: inset 0 0 0 18px #efefef;
				box-shadow: inset 0 0 0 18px #efefef;
			}
			&:after{
				top: 49%;
				left: 9px;
				width: 54px;
				height: 54px;
				opacity: 0;
				background: rgba(0, 0, 0, 0.3);
				-moz-transform: translate(-50%, -50%) scale(0);
				-ms-transform: translate(-50%, -50%) scale(0);
				-webkit-transform: translate(-50%, -50%) scale(0);
				transform: translate(-50%, -50%) scale(0);
			}
		}
		&:checked + label:before{
			-moz-box-shadow: inset 0 0 0 4px #efefef;
			-webkit-box-shadow: inset 0 0 0 4px #efefef;
			box-shadow: inset 0 0 0 4px #efefef;
		}
		
	}
}
.layout-info-account{
	.title-info-account{
		h1{
			font-size: 38px;
			&:after{
				content: '';
				display: block;
				width: 60px;
				height: 4px;
				margin: 30px auto;
				background: #252a2b;
			}
			@media(max-width: 767px){&{font-size: 30px;}}
		}
	}
}
.account-title{
	font-size: 17px;
	font-weight: 700;
	letter-spacing: 1px;
}
.title-detail{
	font-size: 15px;
	font-weight: 700;
	letter-spacing: 1px;
	color: {{settings.shop_title_color}};
	border-bottom: 1px solid #ededed;
}
.account-list{
	>ul>li{
		>a{
			padding: 5px 0;
			&:before{
				content: "\f192";
				font-family: "FontAwesome";
				font-size: 8px;
				display: inline-block;
				margin-right: 8px;
				vertical-align: 2px;
			}
		}
	}
}
#view_address{
	font-weight: 500;
	opacity: 0.8;
	text-decoration: underline;
	margin: 5px 0;
	display: inline-block;
}
.wrap-order-table{
	background: #d9edf7;
	.customers-order-bg{
		background: #fff;
	}
}
#customer_orders{
	.table{
		width: 100%;background: #fff;color:{{settings.shop_text_color}};
		tr{
			&:first-child{
				>th{border-top: 0;background: #fcfcfc;border-bottom: 1px solid #ededed;}
			}
			a{
				font-weight: 500;
				line-height: 20px;
				opacity: 0.66;
			}
			td{
				padding: 8px;
				line-height: 22px;
				border-top: 0;
				&:last-child{padding-right: 8px;}
				&:first-child{padding-left: 8px;}
			}
			th{
				padding: 8px;
				&:last-child{padding-right: 8px;}
				&:first-child{padding-left: 8px;}
			}
		}
	}
	
}
#order_details{
	tr{
		td{
			vertical-align: middle;font-size: 14px;
			a,b{font-weight: 500;}
			&.order-image{
				width: 70px;
				a{
					width: 70px;
					display: block;
					border: 1px solid #ebebeb;
				}
			}
			&.title{
				max-width: 300px;
				.variant{font-size: 13px;opacity: 0.8;}
			}
		}
		&.order_summary{
			.total-money b{font-weight: 600;}
		}
	}
}
@media screen and (max-width: 767px){
	.table-responsive{
		>.table{
			>thead>tr>th{white-space: nowrap;}
			>tbody>tr>td{white-space: nowrap;}
		}
	}
}
.customer-order-cancelled{
	.infomation-order{
		margin-bottom: 5px;
		font-size: 16px;
		line-height: 20px;
		font-weight: 500;
		text-transform: uppercase;
		.order_date{
			font-weight: normal;
			font-size: 14px;
			text-transform: none;
		}
	}
	.order-cancelled{
		h5{font-size: 14px;font-weight: 500;}
	}
}
.order_section_title{font-size: 15px;}
.account-order{
	.alert{padding: 15px;}
	.address{background: #fbfbfb;}
	.text_status{font-weight: 500;}
}
.wrap_edit_address{
	.address_title{
		font-size: 16px;
		padding: 14px 65px 14px 10px;
		background-color: #d9edf7;
		border-color: #bce8f1;
		h3{
			font-size: 14px;
			font-weight: 500;
		}
	}
	.address_actions{
		top: 0;
		right: 0;
		bottom: 0;
		.action_link{
			width: 30px;
			padding: 12px 0;
		}
	}
	.large_view{
		.lb-left{width: 35%;}
		.lb-right{width: 65%;}
	}
	.input-group{
		.input-icon{
			width: 38px;
			height: 38px;
			line-height: 38px;
			background-color: #ebeded;
			color: #6d6f70;
		}
		.input-textbox{
			height: 38px;
			border-radius: 0;
			&.form-control{
				background: #fff;
				&:focus{border-color: #ebeded;}
			}
			&.custom-select{
				border: 1px solid #ebeded;
				box-shadow: none;
				background:#fff url(data:image/svg+xml;base64,) no-repeat right 10px center;
				background-size: 13px;
			}
		}
	}
	.action_bottom{
		.btn{
			height: 35px;
			line-height: 35px;
			font-size: 14px;
			padding: 0 30px;
			border: 0;
			display: inline-block;
			border-radius: 0;
			cursor: pointer;
			text-transform: uppercase;
			outline: 0;
		}
	}
}












