<script>
	$(document).ready(function(){
		if($(window).width() < 991){
			$('.desktop-filter').remove();
		}else{
			$('.mobile-filter').remove();
			$('.desktop-filter').show();
		}
		var flag = false;
		const cloneFilter = $('.fixed_filter').clone();
		$(window).scroll(function(){
			if($(window).width() > 991){
				if($(this).scrollTop() > ($('.collection-heading-page').position().top + 80)){
					if(!flag){
						flag = true;
						$('.navigation-header').append(cloneFilter);
						$('.wrapper-mainCollection .fixed_filter').remove();
					}
				}
				if($(this).scrollTop() < $('.collection-heading-page').position().top){
					if(flag){
						$('.navigation-header .fixed_filter').fadeOut('fast', function() {
							$('.navigation-header .fixed_filter').remove();
							$('.wrapper-mainCollection .collection-heading-page .row').append(cloneFilter);
							$('.wrapper-mainCollection .collection-heading-page .row .fixed_filter').show();
						});
						flag = false;
					}
				}
			}
		})
	})
</script>
