				{%- for link_1 in linklists[link.handle].links -%}
				{%- if linklists[link_1.handle].links == empty -%}
				<li>
					<a href="{{ link_1.url }}" title="{{ link_1.title }}"> 
						{{ link_1.title }}
					</a>
				</li>
				{% else %}
				<li> 
					<a href="{% if link_1.title == 'Về sản phẩm' or link_1.title == 'Lịch sử hình thành' or link_1.title == 'Tìm theo loại sản phẩm' or link_1.title == 'Tìm bộ sản phẩm' or link_1.title == 'Tìm theo chất liệu sản phẩm' or link_1.title == 'Tìm sản phẩm lẻ' or link_1.title == 'Tìm theo đặc tính sản phẩm'  or link_1.title == 'Tìm theo kiểu họa tiết'%}javascript:void(0){% else %}{{ link_1.url }}{% endif %}" title="{{ link_1.title }}"> 
