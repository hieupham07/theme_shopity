				<li>
					<a href="{{ settings.link_menu_3_1 }}" title='{{settings.link_menu_3_1_alt }}'>
						<img src="{{ onMegaImage | asset_url }}" alt="{{settings.link_menu_3_1_alt }}"/>
					</a> 
				</li>
				{% else %}
				<li>
					<a href="{{ settings.link_menu_2_1 }}" title='{{ settings.link_menu_2_1_alt }}'>
						<img src="{{ onMegaImage | asset_url }}" alt="{{ settings.link_menu_2_1_alt }}"/>
					</a>
				</li>
				<li>
					<a href="{{ settings.link_menu_2_2 }}" title='{{ settings.link_menu_2_2_alt }}'>
						<img src="{{ 'on-mega-image-2-1.jpg' | asset_url }}" alt="{{ settings.link_menu_2_2_alt }}"/>
					</a>
				</li>
				{% endif %}
