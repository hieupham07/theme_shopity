		{% capture onMegaImage %}on-mega-image-{{ indexAll }}.jpg{% endcapture %}
		{% capture onMegaLink %}on-mega-link-{{ indexAll }}{% endcapture %}
		{% capture alt %}on-mega-alt-{{ indexAll }}{% endcapture %}
