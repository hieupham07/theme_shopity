.slick-slider{
	.slick-track{
		margin-left: initial;
		div, a, a:focus, div:focus, article:focus, article{
			outline: 0 !important;
		}
	}
	.slick-dots{
		position: absolute;
		bottom: -20px;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		z-index: 9;
		li{
			margin: 0 5px;
			&.slick-active{
				button{
					background: $colorMain;
					border: 1px solid $colorMain;
				}
			}
			button{
				font-size: 0;
				background: transparent;
				border: 2px solid $colorMain;
				width: 15px;
				height: 15px;
				transform: scale(0.6);
				border-radius: 50%;
			}
		}
	}
}
