#footer {
	border-top: 1px solid #ccc;
	padding: 50px 0 0;
	@media(max-width: 767px){
		padding: 50px 0;
	}
	a, p, div{
		color: #866d4b;
	}
	.footer-wrap {
		display: flex;
		flex-wrap: wrap;
		margin-left: -15px;
		margin-right: -15px;
		.footer-wrap-item {
			.footer-p-content{margin-bottom:0;}
			.footer-newletter {
				margin-top: 10px;
			}
			margin-bottom: 15px;
			&:nth-child(1) {
				width: 30%;
			}
			&:nth-child(2) {
				width: 20%;
			}
			&:nth-child(3) {
				width: 25%;
			}
			&:nth-child(4) {
				width: 25%;
			}
			padding: 0 15px;
			@media (min-width: 768px) and (max-width:991px){
				width: 50% !important;
			}
			@media(max-width:767px){
				width: 100% !important;
			}
			h4,
			h5 {
				position: relative;
				font-size: 18px;
				letter-spacing: 0.02em;
				line-height: 1.4;
				color: #453536;
				font-weight: 400;
				text-transform: uppercase;
			}
			form {
				margin-left: 1px;
				position: relative;
				max-width: 320px;
				input {
					width: 100%;
					padding: 5px 20px;
				}
				button {
					text-transform: uppercase;  
					position: absolute;
					background: 0;
					outline: 0;
					border: 0;
					top:49%;
					right: 0;
					padding: 0 20px;
					transform: translateY(calc(-50%));
					background: #d29f13;
					border: 1px solid #d29f13;
					height: 100%;
					color: #fff;
					font-weight: 500;
					line-height: 20px;
					box-shadow: 0;
					font-size: 12px;
					&:hover{
						color: #000;
						&:before{
							transform: scale(1);
						}
					}
					&:before {
						content: "";
						position: absolute;
						z-index: -1;
						top: -.5px;
						bottom: -.5px;
						left: 0;
						right: 0;
						background-color: #fff;
						-webkit-transform: scaleX(0);
						transform: scaleX(0);
						-webkit-transition: all 0.3s ease-out;
						transition: all 0.3s ease-out;
					}
				}
			}
			.footer-wrap-item-social {
				display: flex;
				margin: 10px 0;
				li {
					border-radius: 10px;
					overflow: hidden;
					margin-right: 10px;
					a {
						&:before {
							display: none;
						}
						margin: 0;
						padding: 0;
						display: block;
						img {
							max-height: 35px;
							max-width: 100%;
							height: auto;
						}
					}
				}
			}
			.footer-wrap-item-payment {
				margin-top:10px;
				ul {
					display: flex;
					margin: 10px 0;
					li {
						border-radius: 10px;
						overflow: hidden;
						margin-right: 10px;
						a {
							display: block;
							img {
								max-height: 35px;
								max-width: 100%;
								height: auto;
							}
						}
					}
				}

			}
			.footer-wrap-item-info-list {
				li {
					display: flex;
					align-items: flex-start;
					padding: 0;
					i {
						min-width: 25px;
						margin-top: 5px;
					}
				}
			}
			.footer-wrap-item-fanpage {
				margin-bottom: 10px;
				.fb-page.fb_iframe_widget.fb_iframe_widget_fluid{ 
					width:100% !important;
					iframe{
						width:100%!important;
						max-width:100%;
					}
				}
			}
			.footer-wrap-item-map {
				width: 100%;
				padding-top: 10px;
				height: 263px;
			}
			> ul{
				&.noClass{
					li{
						padding: 0;
						a{
							padding: 0;
							&:before{
								display: none;
							}
						}
					}
				}
				li {
					padding: 5px 0;
					a {
						padding-left: 20px;
						position: relative;
						&:before {
							content: '';
							position: absolute;
							top: 6px;
							left: 0;
							background: #866d4b;
							width: 6px;
							height: 6px;
							border-radius: 50%;
						}
					}
				}
			}
		}
	}
	.footer-copyright{
		border-top: 1px solid #ccc;
		padding: 5px 0;
		> .container-fluid{
			display: flex;
			flex-wrap: wrap;
			align-items: center;
			justify-content: space-between;
			@media(max-width:767px){
				justify-content: center;
			}
			p{
				margin: 0;
				@media(max-width:767px){
					width: 100%;
					text-align: center;
				}
			}
			img{
				max-width: 160px;
			}
		}
	}
}
.home-blog {
	padding-bottom: 15px;
	margin-bottom: 50px;
	@media(max-width:767px){
		padding-bottom: 0;
		margin-bottom: 0;
	}
	.container-fluid{
		@media(max-width: 480px){
			padding: 0;
		}
	}
	.home-blog-wrap {
		@media(max-width: 480px){
			display: flex;
			width: 100%;
			overflow-x: scroll;
			transition: all 5s;
			&::-webkit-scrollbar {
				width: 3px;
				transition: all 5s;
			}
			&::-webkit-scrollbar-thumb {
				background-color: transparent;
				transition: all 5s;
				background-clip: content-box;
			}
			&.activeScroll{
				&::-webkit-scrollbar-thumb {
					background-color: $colorMain;
				}
			}
		}
		.home-blog-wrap-item {
			padding: 0 10px; 
			@media(max-width:480px){
				min-width: 90%;
			}
			.home-blog-wrap-item-image{
				a {
					display: block;
					overflow: hidden;
					position: relative;
					width: 100%;
					&:hover{
						img{
							-webkit-transform: scale(1.025);
							-ms-transform: scale(1.025);
							transform: scale(1.025);
						}
					}
					img {
						max-width: 100%;
						height: auto;
						transition: all .5s;
						display: block;
						background: transparent;
						-webkit-transform: scale(1);
						-ms-transform: scale(1);
						transform: scale(1);
						-webkit-transition: all .3s ease-in-out;
						-o-transition: all .3s ease-in-out;
						transition: all .3s ease-in-out;

					}
				}
			}
			h3 {
				margin: 10px 0;
				text-transform: uppercase;
				a{
					font-size: 20px; 
					overflow: hidfden;
					-webkit-line-clamp: 2;
					-webkit-box-orient: vertical;
					display: -webkit-box;
					font-weight: 500;
					text-transform: initial;
					@media(min-width:768px) and (max-width:992px){
						font-size: 18px; 
						height: 42px;overflow: hidden;
					}
					@media(max-width: 480px) {
						height: 36px;
						font-size: 15px;overflow: hidden;
					}
				}
			}
			p {
				color: #282828;
				font-size: 16px;
				font-weight: 300; 
				line-height: 22px;
				overflow: hidden;
				-webkit-line-clamp: 3;
				-webkit-box-orient: vertical;
				display: -webkit-box;
				@media(min-width:768px) and (max-width:992px){
					font-size: 15px; 
				}
				@media(max-width:480px){
					font-size: 13px;
				}
			}
		}
	}
}
#section-instagram{
	padding-bottom: 15px;
