.desktop-filter {
	display: none;
	margin: 10px 0;
	float:left;
	.layered-filter-group {
		display: flex;
		margin-left: -10px;
		margin-right: -10px;
		.filter-group {
			width: calc(100%/6);
			padding: 0px;
			.filter-group-block {
				position: relative;
				&:hover{
					.filter-group-content{
						visibility: visible;
						opacity: 1;
						transform: translateY(10px);
					}
				}
				.filter-group-subtitle{
					display: flex;
					@media(min-width:1200px){
						justify-content: center;
					}
					span{
						display: inline-block;
						margin-right: 10px;
						transition: all .5s;
						&.activeFilter{
							transform: rotate(-180deg);
						}
					}
				}
				.filter-group-content {
					visibility: hidden;
					opacity: 0;
					transition: all .25s;
					transform: translateY(25px);
					position: absolute;
					width: 100%;
					padding: 5px 10px;
					background: #fff;
					z-index: 9;
					box-shadow: 0 0 1px rgba(40, 40, 40, .5);
					max-height: 200px;
					overflow-y: scroll;
					&::-webkit-scrollbar {
						width: 3px;
						transition: all 5s;
					}
					&::-webkit-scrollbar-thumb {
						background-color: $colorMain;
						transition: all 5s;
					}
					&.filter-color{
						ul{
							li{
								margin: 5px; 
							}
						}
					}
				}
			}
		}
	}
}
