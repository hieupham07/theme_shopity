<header id="site-header" class="main-header mainHeader_temp_2 {% if template contains 'product' %}mainHeader_tempPr{% endif %}">
	<div class="navigation-header">
		{%- if settings.show_header_top_bar -%}
		<div class="announcement-bar announcement_bar_temp02">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12 col-md-8 top-bar-left d-flex align-items-center">
						<div class="top-widget-holder top-bar-contact">
							{%- if settings.top_bar_contact != ''-%}
							<a href="{{settings.top_bar_contact_link}}" target="_blank" rel="noreferrer noopener"><i class="fa fa-map-marker"></i>{{settings.top_bar_contact}}</a>
							{%- endif -%}
							{%- if settings.top_bar_hotline != ''-%}
							<a href="tel:{{settings.top_bar_hotline | strip_html | replace: '.',''}}"><i class="fa fa-phone"></i>{{settings.top_bar_hotline}}</a>
							{%- endif -%}
						</div>
					</div>
					<div class="col-12 col-md-4 top-bar-right d-flex align-items-center justify-content-md-end">
						<div class="top-widget-holder top-bar-follow">
							<p>
								{%- for i in (1..4)-%}
								{%- capture text_follow_us -%}top_bar_text_follow_{{i}}{%- endcapture -%}
								{%- capture follow_us_link -%}top_bar_link_follow_{{i}}{%- endcapture -%}
								{%- if settings[text_follow_us] != ''-%}
								<a href="{{settings[follow_us_link]}}" target="_blank" rel="noreferrer noopener">{{settings[text_follow_us]}}</a>
								{%- endif -%}
								{%- endfor -%}
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		{%- endif -%}
